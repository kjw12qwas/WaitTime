<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#6279E9"
    tools:context=".fragment.Home_frame">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="60dp"
            android:id="@+id/title"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/namef"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:text="WAIT TIME"
            android:layout_width="match_parent"
            android:layout_height="39dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="김재원님"
            android:textSize="35dp"
            android:textColor="#ffffff"
            android:fontFamily="@font/namef"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:background="@drawable/background">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginBottom="14dp"
                    android:layout_width="158dp"
                    android:layout_height="29dp"
                    android:textSize="25dp"
                    android:text="현재 대기 인원"
                    android:textColor="#000000"
                    android:fontFamily="@font/fontm"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_marginLeft="40dp"
                        android:background="@drawable/bank_list"
                        android:layout_width="140dp"
                        android:layout_height="150dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="140dp"
                            android:layout_height="22dp"
                            android:background="@drawable/home_stay"/>
                        <TextView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:fontFamily="@font/fontm"
                            android:text="13"
                            android:textSize="15dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="4dp"
                            android:textColor="#000000"
                            android:id="@+id/result_people"/>
                        <TextView
                            android:id="@+id/now_stay"
                            android:layout_width="50dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:textColor="#000000"
                            android:textSize="80dp"
                            android:text="3"
                            android:fontFamily="@font/fontm"/>
                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="10dp"
                            android:text="경기도 의정부시 OO은행"
                            android:textSize="9dp"
                            android:textColor="#000000"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/fontm"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="40dp"
                        android:background="@drawable/bank_list"
                        android:layout_width="140dp"
                        android:layout_height="150dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="140dp"
                            android:layout_height="22dp"
                            android:background="@drawable/home_stay"/>
                        <TextView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:fontFamily="@font/fontm"
                            android:text="13"
                            android:textSize="15dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="4dp"
                            android:textColor="#000000"
                            android:id="@+id/result_people2"/>

                        <TextView
                            android:id="@+id/now_stay2"
                            android:layout_width="50dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/fontm"
                            android:text="5"
                            android:textColor="#000000"
                            android:textSize="80dp" />
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="10dp"
                            android:text="광주광역시 광산구 mm은행"
                            android:textSize="9dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="#000000"
                            android:layout_gravity="center"
                            android:fontFamily="@font/fontm"/>
                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:layout_marginTop="20dp"
                    android:id="@+id/DatePickerbutton"
                    android:layout_width="128dp"
                    android:layout_height="30dp"
                    android:background="@drawable/button"
                    android:layout_gravity="center"
                    android:text="날짜 변경"
                    android:textColor="#ffffff"
                    android:textSize="13dp"
                    android:fontFamily="@font/fontb"/>

            </LinearLayout>

        </FrameLayout>
    </LinearLayout>

</RelativeLayout>