<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#6279E9"
    tools:context=".fragment.Home_frame">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="60dp"
            android:id="@+id/title"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/namef"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:text="WAIT TIME"
            android:layout_width="match_parent"
            android:layout_height="39dp"/>
        <TextView
            android:id="@+id/nickname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="김재원님"
            android:textSize="35dp"
            android:textColor="#ffffff"
            android:fontFamily="@font/namef"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:background="@drawable/background">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="23dp"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FFffffff"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/boy"/>
                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="김재원"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/fontb"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="18dp"/>
                <TextView
                    android:id="@+id/profile_phone"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:textSize="13dp"
                    android:gravity="center_vertical"
                    android:textColor="#ACA5A5"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/fontb"
                    android:text="전화번호"
                    android:layout_marginLeft="50dp"/>

                <LinearLayout
                    android:layout_marginTop="26dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginLeft="56dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/write"/>
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_width="200dp"
                        android:layout_height="20dp"
                        android:textSize="18dp"
                        android:textColor="#000000"
                        android:text="누적 예약 횟수"
                        android:fontFamily="@font/fontb"/>
                    <Button
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/next"
                        android:id="@+id/accumulate"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="50dp"
                        android:src="@drawable/next"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="56dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/notice"/>
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_width="200dp"
                        android:layout_height="20dp"
                        android:textSize="18dp"
                        android:textColor="#000000"
                        android:text="건의사항 작성"
                        android:fontFamily="@font/fontb"/>
                    <Button
                        android:background="@drawable/next"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/notice_write"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="50dp"
                        android:src="@drawable/next"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginLeft="56dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/exit"/>
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_width="200dp"
                        android:layout_height="20dp"
                        android:textSize="18dp"
                        android:textColor="#000000"
                        android:text="로그아웃"
                        android:fontFamily="@font/fontb"/>
                    <Button
                        android:background="@drawable/next"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/logout"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="50dp"/>
                </LinearLayout>
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>

</LinearLayout>